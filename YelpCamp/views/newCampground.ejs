<%- include ./partials/header.ejs %>


	<div class="container wrapper new">
		<div class="row"></div>
		<div class="row">
			<h1 class="col align-self-center name">Add a New Campground!</h1>
		</div>
		<div class="row">
			<form method="POST" action="/campgrounds">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Campground Name" value="">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL" value="">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description" value="">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
		<div class="row back">
			<a class="btn btn-danger" role="button" href="/campgrounds"><span id="icon"><i class="fas fa-caret-square-left"></i></span>Go Back</a>
		</div>
		<div class="push"></div>	
	</div>

	
