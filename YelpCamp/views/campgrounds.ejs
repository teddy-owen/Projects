<%- include ./partials/header.ejs %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Yelp Camp</h1>
			<p>View our hand-picked campgrounds from around the world</p>
			<p>
				<a type="button" class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
			</p>
		</div>
	</header>


	<div class="row text-center" style="display:flex; flex-wrap:wrap"> 
		<% campgrounds.forEach(function(campground){%>
			<div class="col-md-3 col-sm-6">
				<div class="img-fluid img-thumbnail">
					<img style = "max-width: 100%; height:auto;" src="<%= campground.image %>">
					<div class="caption">
						<h4><%= campground.name %></h4>
					</div>
				</div>
			</div>
		<% }); %>
	</div>

</div>

<%- include ./partials/footer.ejs %>